@model SJOB_EXE201.Models.JobPost

@{
    ViewData["Title"] = "Chỉnh sửa bài đăng";
}

<h2>Chỉnh sửa bài đăng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Requirements" class="form-label"></label>
        <textarea asp-for="Requirements" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Benefits" class="form-label"></label>
        <textarea asp-for="Benefits" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SalaryMin" class="form-label"></label>
        <input asp-for="SalaryMin" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SalaryMax" class="form-label"></label>
        <input asp-for="SalaryMax" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="JobType" class="form-label"></label>
        <input asp-for="JobType" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ExperienceLevel" class="form-label"></label>
        <input asp-for="ExperienceLevel" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Deadline" class="form-label"></label>
        <input asp-for="Deadline" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="PostType" class="form-label"></label>
        <input asp-for="PostType" class="form-control" />
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="/JobPost" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}