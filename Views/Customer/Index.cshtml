@{
    ViewData["Title"] = "Choose Your Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Choose Your Role</h3>
                </div>
                <div class="card-body">
                    <p class="lead text-center mb-4">
                        Welcome to SJOB! Please select your role to continue:
                    </p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3 h-100 role-card" id="worker-card">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-tie fa-4x mb-3 text-primary"></i>
                                    <h4>Worker</h4>
                                    <p>Find jobs and opportunities that match your skills</p>
                                    <form asp-action="SelectRole" asp-controller="Customer" method="post">
                                        <input type="hidden" name="role" value="Worker" />
                                        <button type="submit" class="btn btn-outline-primary btn-block">
                                            Select Worker
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-3 h-100 role-card" id="employer-card">
                                <div class="card-body text-center">
                                    <i class="fas fa-building fa-4x mb-3 text-success"></i>
                                    <h4>Employer</h4>
                                    <p>Post jobs and find the right talent for your company</p>
                                    <form asp-action="SelectRole" asp-controller="Customer" method="post">
                                        <input type="hidden" name="role" value="Employer" />
                                        <button type="submit" class="btn btn-outline-success btn-block">
                                            Select Employer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add hover effect to role cards
            $(".role-card").hover(
                function () {
                    $(this).addClass("shadow-lg").css('cursor', 'pointer');
                },
                function () {
                    $(this).removeClass("shadow-lg");
                }
            );

            // Make the entire card clickable
            $("#worker-card").click(function () {
                $(this).find("button").click();
            });

            $("#employer-card").click(function () {
                $(this).find("button").click();
            });
        });
    </script>
}

<style>
    .role-card {
        transition: all 0.3s ease;
        border: 1px solid #dee2e6;
    }

        .role-card:hover {
            transform: translateY(-5px);
        }

    #worker-card:hover {
        border-color: var(--primary);
    }

    #employer-card:hover {
        border-color: var(--success);
    }
</style>
