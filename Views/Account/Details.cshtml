@model SJOB_EXE201.Models.User
@{
    ViewData["Title"] = "User Details";
    var userDetail = Model.UserDetails.FirstOrDefault();
    var userCredit = Model.UserCredits.FirstOrDefault();
        Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">User Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- User Basic Info -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h4 class="mb-0">Account Information</h4>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                @if (string.IsNullOrEmpty(Model.Avatar))
                                {
                                    <div class="avatar-placeholder rounded-circle mx-auto d-flex justify-content-center align-items-center bg-secondary text-white" style="width: 120px; height: 120px; font-size: 48px;">
                                        @Model.Username.Substring(0, 1).ToUpper()
                                    </div>
                                }
                                else
                                {
                                    <img src="@Model.Avatar" alt="User Avatar" class="rounded-circle mx-auto" style="width: 120px; height: 120px; object-fit: cover;">
                                }
                                <h4 class="mt-3">@Model.Username</h4>
                                <span class="badge @(Model.Status ? "bg-success" : "bg-danger")">
                                    @(Model.Status ? "Active" : "Inactive")
                                </span>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold">Email:</label>
                                <p>@Model.Email</p>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold">Role:</label>
                                <p>@Model.Role.Name</p>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold">Authentication Provider:</label>
                                <p>@(string.IsNullOrEmpty(Model.AuthProvider) ? "Local" : Model.AuthProvider)</p>
                            </div>

                            @if (userCredit != null)
                            {
                                <div class="mb-3">
                                    <label class="fw-bold">Credit Balance:</label>
                                    <p>@userCredit.Balance.GetValueOrDefault().ToString("C")</p>
                                </div>
                                <div class="mb-3">
                                    <label class="fw-bold">Last Updated:</label>
                                    <p>@(userCredit.LastUpdated.HasValue ? userCredit.LastUpdated.Value.ToString("g") : "N/A")</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- User Personal Info -->
                <div class="col-md-8 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h4 class="mb-0">Personal Information</h4>
                        </div>
                        <div class="card-body">
                            @if (userDetail != null)
                            {
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">First Name:</label>
                                        <p>@userDetail.FirstName</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Last Name:</label>
                                        <p>@userDetail.LastName</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Phone Number:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.PhoneNumber) ? "N/A" : userDetail.PhoneNumber)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Address:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.Address) ? "N/A" : userDetail.Address)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Headline:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.Headline) ? "N/A" : userDetail.Headline)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Experience Years:</label>
                                        <p>@(userDetail.ExperienceYears.HasValue ? userDetail.ExperienceYears.Value.ToString() : "N/A")</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Education:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.Education) ? "N/A" : userDetail.Education)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Skills:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.Skills) ? "N/A" : userDetail.Skills)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Desired Position:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.DesiredPosition) ? "N/A" : userDetail.DesiredPosition)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Desired Salary:</label>
                                        <p>@(userDetail.DesiredSalary.HasValue ? userDetail.DesiredSalary.Value.ToString("C") : "N/A")</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Desired Location:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.DesiredLocation) ? "N/A" : userDetail.DesiredLocation)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Availability:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.Availability) ? "N/A" : userDetail.Availability)</p>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label class="fw-bold">Bio:</label>
                                        <p>@(string.IsNullOrEmpty(userDetail.Bio) ? "N/A" : userDetail.Bio)</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="fw-bold">Created At:</label>
                                        <p>@(userDetail.CreatedAt.HasValue ? userDetail.CreatedAt.Value.ToString("g") : "N/A")</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    No personal information available for this user.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to @(Model.Status ? "deactivate" : "activate") this user?');">
                                <button type="submit" class="btn @(Model.Status ? "btn-warning" : "btn-success")">
                                    @if (Model.Status)
                                    {
                                        <i class="bi bi-lock"></i>
                                        <span>Block User</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-unlock"></i>
                                        <span>Activate User</span>
                                    }
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
