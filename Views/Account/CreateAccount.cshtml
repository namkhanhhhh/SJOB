@{
    ViewData["Title"] = "Create Account By Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
  @*  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card shadow-lg p-4" style="width: 600px;">
            <h2 class="text-center mb-3">Register</h2>

            @if (TempData["Fail"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["Fail"]</div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success  text-center">@TempData["Message"]</div>
            }
            <form method="post" asp-action="CreateAccount" asp-controller="Account">
                <div class="row">
                    <!-- Username -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" required pattern="^[a-zA-Z0-9]+$" title="Only letters and numbers allowed!" />
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <!-- Password -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>

                    <!-- Confirm Password -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" name="confirmPassword" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <!-- First Name -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" name="firstName" class="form-control" required />
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" name="lastName" class="form-control" required />
                    </div>
                </div>

                <!-- Role (chiếm cả hàng) -->
                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <select asp-items="@(new SelectList(ViewBag.RoleList, "Value", "Text"))" name="role" class="form-control" required>
                        <option value="">-- Select Role --</option> <!-- Đảm bảo có option mặc định -->
                    </select>
                </div>

                <!-- Nút đăng ký -->
                <button type="submit" class="btn btn-primary w-100">Register</button>

                <hr>

                <!-- Nút logout -->
                <div class="text-center mt-4">
                    <button onclick="window.history.back()" class="btn btn-outline-secondary px-4 fw-bold shadow-sm">
                        <i class="bi bi-arrow-left-circle-fill"></i> Return
                    </button>
                </div>
            </form>
        </div>
    </div>

  @*   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
</body>
</html>
