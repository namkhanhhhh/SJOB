    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Add animation classes when elements come into view
        document.addEventListener('DOMContentLoaded', function() {
            // Dropdown toggle
            const userDropdown = document.querySelector('.user-profile-nav .dropdown-toggle');
            if (userDropdown) {
                userDropdown.addEventListener('click', function(e) {
                    e.preventDefault();
                    const menu = this.nextElementSibling;
                    menu.classList.toggle('show');
                });
            }

            $(document).ready(function () {
                // Global wishlist toggle functionality
                $('.wishlist-btn, .btn-wishlist, .btn-heart, .wishlist-btn-corner').click(function (e) {
                    e.preventDefault();
                    e.stopPropagation();

                    var $button = $(this);
                    var jobId = $button.data('job-id');

                    $.ajax({
                        url: '@Url.Action("ToggleWishlist", "Worker")',
                        type: 'POST',
                        data: { jobId: jobId },
                        success: function (response) {
                            if (response.isInWishlist) {
                                $button.addClass('active');
                                $button.find('i').removeClass('far').addClass('fas');
                                $button.attr('data-is-in-wishlist', 'true');
                                $button.attr('title', 'Remove from wishlist');

                                // Show success toast if you have toastr library
                                if (typeof toastr !== 'undefined') {
                                    toastr.success('Job added to wishlist');
                                }
                            } else {
                                $button.removeClass('active');
                                $button.find('i').removeClass('fas').addClass('far');
                                $button.attr('data-is-in-wishlist', 'false');
                                $button.attr('title', 'Add to wishlist');

                                // Show info toast if you have toastr library
                                if (typeof toastr !== 'undefined') {
                                    toastr.info('Job removed from wishlist');
                                }
                            }
                        },
                        error: function () {
                            // Show error toast if you have toastr library
                            if (typeof toastr !== 'undefined') {
                                toastr.error('Error updating wishlist');
                            }
                        }
                    });
                });
            });

            
            // Close dropdowns when clicking outside
            document.addEventListener('click', function(e) {
                const dropdowns = document.querySelectorAll('.dropdown-menu');
                dropdowns.forEach(function(dropdown) {
                    if (!dropdown.contains(e.target) && !e.target.classList.contains('dropdown-toggle')) {
                        dropdown.classList.remove('show');
                    }
                });
            });
            
            // Animation for elements on scroll
            const animateOnScroll = function() {
                const elements = document.querySelectorAll('.animate-on-scroll');
                
                elements.forEach(function(element) {
                    const elementPosition = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    
                    if (elementPosition < windowHeight - 50) {
                        element.classList.add('animate');
                    }
                });
            };
            
            // Initially call the function
            animateOnScroll();
            
            // Call the function on scroll
            window.addEventListener('scroll', animateOnScroll);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
