@model SJOB_EXE201.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    Layout = "_WorkerLayout";
}

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 card-title mb-4">Đổi Mật Khẩu</h1>

                    <form asp-controller="Worker" asp-action="ChangePassword" method="post">
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Mật Khẩu Hiện Tại</label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Mật Khẩu Mới</label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Xác Nhận Mật Khẩu Mới</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Worker" asp-action="Profile" class="btn btn-outline-secondary me-md-2">Hủy</a>
                            <button type="submit" class="btn btn-primary">Đổi Mật Khẩu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>