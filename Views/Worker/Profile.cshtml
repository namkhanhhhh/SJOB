@model SJOB_EXE201.Models.User
@{
    ViewData["Title"] = "My Profile";
    Layout = "_WorkerLayout";
}

<div class="container mb-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Model.Avatar" alt="Profile Picture" class="rounded-circle img-fluid mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="avatar-placeholder mb-3">
                            <i class="fas fa-user-circle fa-7x"></i>
                        </div>
                    }
                    <h3 class="card-title">@Model.Username</h3>
                    <p class="text-muted">
                        @(Model.UserDetails.FirstOrDefault()?.Headline ?? "Worker")
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("EditProfile", "Worker")" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                        <a href="@Url.Action("ChangePassword", "Worker")" class="btn btn-outline-secondary">
                            <i class="fas fa-key me-2"></i>Change Password
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Contact Information</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="fas fa-envelope me-2"></i>@Model.Email
                        </li>
                        @if (!string.IsNullOrEmpty(Model.UserDetails.FirstOrDefault()?.PhoneNumber))
                        {
                            <li class="list-group-item">
                                <i class="fas fa-phone me-2"></i>@Model.UserDetails.FirstOrDefault()?.PhoneNumber
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.UserDetails.FirstOrDefault()?.Address))
                        {
                            <li class="list-group-item">
                                <i class="fas fa-map-marker-alt me-2"></i>@Model.UserDetails.FirstOrDefault()?.Address
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Personal Information</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">First Name</p>
                            <p class="fw-bold">@(Model.UserDetails.FirstOrDefault()?.FirstName ?? "Not specified")</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">Last Name</p>
                            <p class="fw-bold">@(Model.UserDetails.FirstOrDefault()?.LastName ?? "Not specified")</p>
                        </div>
                    </div>
                    @if (Model.UserDetails.FirstOrDefault()?.ExperienceYears.HasValue == true)
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Experience</p>
                            <p class="fw-bold">@Model.UserDetails.FirstOrDefault()?.ExperienceYears years</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.UserDetails.FirstOrDefault()?.Bio))
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Bio</p>
                            <p>@Model.UserDetails.FirstOrDefault()?.Bio</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Job Preferences</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">Desired Position</p>
                            <p class="fw-bold">@(Model.UserDetails.FirstOrDefault()?.DesiredPosition ?? "Not specified")</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">Desired Salary</p>
                            <p class="fw-bold">
                                @(Model.UserDetails.FirstOrDefault()?.DesiredSalary.HasValue == true
                                    ? $"{Model.UserDetails.FirstOrDefault()?.DesiredSalary:N0} VND/hour"
                                    : "Not specified")
                            </p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <p class="mb-1 text-muted">Desired Location</p>
                        <p class="fw-bold">@(Model.UserDetails.FirstOrDefault()?.DesiredLocation ?? "Not specified")</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.UserDetails.FirstOrDefault()?.Availability))
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Availability</p>
                            <p>@Model.UserDetails.FirstOrDefault()?.Availability</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Skills & Education</h5>
                    @if (!string.IsNullOrEmpty(Model.UserDetails.FirstOrDefault()?.Skills))
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Skills</p>
                            <p>@Model.UserDetails.FirstOrDefault()?.Skills</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Skills</p>
                            <p>No skills specified. <a href="@Url.Action("EditProfile", "Worker")">Add your skills</a> to improve your job matches.</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.UserDetails.FirstOrDefault()?.Education))
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Education</p>
                            <p>@Model.UserDetails.FirstOrDefault()?.Education</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Education</p>
                            <p>No education details specified. <a href="@Url.Action("EditProfile", "Worker")">Add your education</a> to improve your profile.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
