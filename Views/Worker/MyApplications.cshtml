@model IEnumerable<SJOB_EXE201.Models.Application>
@{
    ViewData["Title"] = "My Applications";
    Layout = "_WorkerLayout";
}

<div class="container mb-5">
    <div class="page-header">
        <h1><i class="fas fa-clipboard-list me-2"></i> My Applications</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="far fa-clipboard"></i>
            <h3>No Applications Yet</h3>
            <p>You haven't applied to any jobs yet. Browse available opportunities and start your application journey.</p>
            <a href="/HomePage" class="btn btn-primary action-btn">
                <i class="fas fa-search me-2"></i> Browse Jobs
            </a>
        </div>
    }
    else
    {
        <div class="applications-container">
            <div class="table-responsive">
                <table class="table applications-table">
                    <thead>
                        <tr>
                            <th>Job Title</th>
                            <th>Company</th>
                            <th>Applied On</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var application in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("JobDetails", "Worker", new { id = application.JobPostId })" class="job-title">
                                        @application.JobPost.Title
                                    </a>
                                </td>
                                <td>
                                    <span class="company-name">
                                        @(application.JobPost.User.CompanyProfiles.FirstOrDefault()?.CompanyName ?? application.JobPost.User.Username)
                                    </span>
                                </td>
                                <td>
                                    <span class="date">@application.CreatedAt?.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td>
                                    @switch (application.Status)
                                    {
                                        case "pending":
                                            <span class="status-badge pending">
                                                <i class="fas fa-clock"></i> Pending
                                            </span>
                                            break;
                                        case "approved":
                                            <span class="status-badge approved">
                                                <i class="fas fa-check-circle"></i> Approved
                                            </span>
                                            break;
                                        case "rejected":
                                            <span class="status-badge rejected">
                                                <i class="fas fa-times-circle"></i> Rejected
                                            </span>
                                            break;
                                        case "completed":
                                            <span class="status-badge completed">
                                                <i class="fas fa-check-double"></i> Completed
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@application.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("JobDetails", "Worker", new { id = application.JobPostId })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i> View Job
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>